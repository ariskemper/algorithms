{
  "name": "algorithms",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "type": "module",
  "keywords": [
    "algorithms",
    "bubble-sort",
    "heap sort",
    "insertion sort",
    "merge sort",
    "selection sort",
    "counting sort"
  ],
  "author": "Aris Kemper <aris.github@gmail.com>",
  "license": "MIT",
  "description": "",
  "scripts": {
    "build": "tsc",
    "test": "glob -c \"node --loader tsx --no-warnings --test\" \"./src/**/*.spec.ts\"",
    "test:watch": "glob -c \"node --loader tsx --no-warnings --watch --test\" \"./src/**/*.spec.ts\"",
    "test:cov": "glob -c \"c8 node --loader tsx --no-warnings --test\" \"./src/**/*.spec.ts\"",
    "doc": "rm -R ./doc && typedoc --tsconfig ./tsconfig.json",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "format": "prettier \"src/**/*.{ts,tsx}\" --write",
    "clean": "rm -rf ./dist ./coverage",
    "ci": "npm run clean && npm run lint && npm run build && npm run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "20.6.2",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "c8": "8.0.1",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "glob": "10.3.4",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "tsx": "3.12.10",
    "typedoc": "0.25.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "*.md": "prettier --write"
  }
}
