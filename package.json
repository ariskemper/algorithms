{
  "name": "algorithms",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "keywords": [
    "algorithms",
    "bubble-sort",
    "heap sort",
    "insertion sort",
    "merge sort",
    "selection sort",
    "counting sort"
  ],
  "author": "Aris Kemper <aris.github@gmail.com>",
  "license": "MIT",
  "description": "",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:v": "jest --verbose",
    "test:cov": "jest --coverage",
    "doc": "rm -R ./doc && typedoc --tsconfig ./tsconfig.json",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "format": "prettier \"src/**/*.{ts,tsx}\" --write",
    "clean": "rm -rf ./dist ./coverage",
    "ci": "npm run clean && npm run lint && npm run build && npm run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.4",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typedoc": "0.25.1",
    "typescript": "5.2.2"
  },
  "jest": {
    "transform": {
      ".ts$": [
        "@swc/jest"
      ]
    },
    "testRegex": "algorithms/.*/.*\\.spec\\.ts$",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "*.md": "prettier --write"
  }
}
