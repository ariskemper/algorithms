{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*", ".eslintrc.js"],
}
