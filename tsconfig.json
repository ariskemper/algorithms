{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  }
}
