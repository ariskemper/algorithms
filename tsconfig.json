{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "sourceMap": true,
    "outDir": "dist",
    "module": "NodeNext",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  }
}
